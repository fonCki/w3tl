{
  "compilerOptions": {
    "target": "ESNext",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@models/*": ["src/models/*"],
      "@components/*": ["src/components/*"],
      "@data/*": ["src/mocks/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@constants/*": ["src/constants/*"],
      "@hooks/*": ["src/hooks/*"],
      "@store/*": ["src/store/*"],
      "@actions/*": ["src/actions/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@context/*": ["src/context/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": [
        "src/styles/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@containers/*": [
        "src/containers/*"
      ],
      "@hoc/*": [
        "src/hoc/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@test/*": [
        "src/test/*"
      ],
      "@features/*": [
        "src/features/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}